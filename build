case "$1" in

# Compile and Run
run) ./build build
     RETVAL=$?
     [ $RETVAL -eq 0 ] && ./caves
     ;;
# Compile Sources
build) echo "compile"
       ghc --make *.hs -odir int -hidir int -o caves
       ;;
# Clean and Compile
rebuild) ./build clean
         ./build compile
         ;;
# Clean
clean) echo "clean"
       rm int/*
       rm caves
       ;;

*) echo "usage: $0 build/run/rebuild/clean"
   ;;
esac